<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movieCardImage"
        android:layout_width="200dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movie1" />

    <TextView
        android:id="@+id/movieCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Title"
        app:layout_constraintStart_toEndOf="@+id/movieCardImage"
        app:layout_constraintTop_toTopOf="@+id/movieCardImage" />

    <TextView
        android:id="@+id/movieCardYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Release Year"
        app:layout_constraintStart_toEndOf="@+id/movieCardImage"
        app:layout_constraintTop_toBottomOf="@+id/movieCardTitle" />

    <TextView
        android:id="@+id/movieCardGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Genre"
        app:layout_constraintStart_toEndOf="@+id/movieCardImage"
        app:layout_constraintTop_toBottomOf="@+id/movieCardYear" />

    <TextView
        android:id="@+id/movieCardRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Rating"
        app:layout_constraintStart_toEndOf="@+id/movieCardImage"
        app:layout_constraintTop_toBottomOf="@+id/movieCardGenre" />
</androidx.constraintlayout.widget.ConstraintLayout>